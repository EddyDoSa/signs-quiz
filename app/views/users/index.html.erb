<p style="color: green"><%= notice %></p>

<br><br><h2>Users</h2>

  <table class="table table-condensed">
    <thead>
      <tr class ="center">
        <th>Email</th>
        <th>Role</th>

        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @users.each do |user| %>
        <tr class ="center">
          <td><%= user.email %></td>
          <td><%= user.role %> </td>
            <td width = "10"><%= link_to 'Edit', edit_user_path(user), class:"btn btn-secondary" if !user.admin? %></td>
            <td width = "10"><%= link_to 'Delete', user, data: { "turbo-method": :delete, confirm: 'Are you sure?' }, class:"btn btn-danger" if !user.admin?%></td>
        </tr>
      <% end %>
    </tbody>
  </table>